<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Home">



    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/header"
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorDarkGray"
        app:menu="@menu/drawermenu"
        app:itemTextColor="@color/colorWhite"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ActionBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_pic"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/actionbar_text"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="7sp"
                android:text="@string/home"
                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="102dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardCornerRadius="@dimen/cardview_default_elevation">

            <ImageView
                android:id="@+id/icon.4.img"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/student" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="117dp"
                android:text="Course: English"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="italic"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Tutor"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="162dp"
                android:background="@color/colorDarkGray"
                android:elevation="@dimen/cardview_default_elevation"
                android:text="Request"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Anum Khan"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Suggest_tutor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="319dp"
            android:fontFamily="sans-serif"

            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"

            android:text=" Suggest Tutor"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="189dp"
            android:layout_marginRight="189dp"
            android:layout_marginBottom="102dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardCornerRadius="@dimen/cardview_default_elevation">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon.3.img"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/student" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"
                android:layout_marginTop="117dp"
                android:text="Course: English"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="italic"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Tutor"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="162dp"
                android:background="@color/colorDarkGray"
                android:elevation="@dimen/cardview_default_elevation"
                android:text="Request"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Mahrukh Khan"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="136dp"
                android:text="Credit hrs.: 2$/hour"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="italic"

                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="191dp"
            android:layout_marginRight="191dp"
            android:layout_marginBottom="384dp"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:elevation="@dimen/cardview_default_elevation">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon.1.img"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/student" />

            <Button

                android:layout_width="wrap_content"
                android:layout_height="29dp"
               android:layout_gravity="center"
                android:id="@+id/course1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_marginTop="75dp"
                android:background="@color/colorDarkGray"
                android:elevation="@dimen/cardview_default_elevation"
                android:text="Show Tutor"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="English"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="384dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardCornerRadius="@dimen/cardview_default_elevation">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon.2.img"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/student" />

            <Button
                android:id="@+id/course2"

                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:layout_marginTop="75dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:background="@color/colorDarkGray"
                android:elevation="@dimen/cardview_default_elevation"
                android:text="Show Tutor"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Physics"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="All Courses "
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="660dp"
            android:background="@drawable/background_pic"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TableRow android:layout_marginLeft="30dp">

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:paddingLeft="-20dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/home" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:paddingLeft="-20dp"
                    android:paddingTop="7dp"
                    android:src="@drawable/add" />

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:paddingLeft="-20dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/bell" />

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:paddingLeft="-20dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/user"

                    />
            </TableRow>
        </TableLayout>


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>