<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutor_profile">

    <LinearLayout
        android:id="@+id/ActionBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/background_pic"
        >
        <ImageView
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/actionbar_text"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="7sp"
            android:text="Courses"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="522dp"
        android:background="@drawable/background_pic"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon.1.img"
            android:layout_width="110dp"
            android:layout_height="93dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"

            android:src="@drawable/icon" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="537dp"
        android:text="Eman ur Rehman"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="480dp"
        android:paddingLeft="10dp"
        android:text="Manage Courses"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!--
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="108dp"
            android:layout_marginRight="108dp"
            android:layout_marginBottom="455dp"
            android:background="@color/colorDarkGray"
            android:text="CONTACT"
            android:textColor="@color/colorWhite" />
    -->


    <Button
        android:id="@+id/add_course"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="480dp"
        android:background="@color/colorDarkGray"
        android:text="ADD"
        android:textColor="@color/colorWhite" />

    <TableLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="660dp"
        android:background="@drawable/background_pic"
        android:gravity="center_vertical"
        android:orientation="horizontal"  >

        <TableRow
            android:layout_marginLeft="30dp">

            <ImageView
                android:id="@+id/home"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/home"
                android:paddingLeft="-20dp"
                android:paddingTop="3dp"
                />

            <ImageView
                android:id="@+id/add"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:src="@drawable/add"
                android:paddingLeft="-20dp"
                android:paddingTop="7dp"
                />
            <ImageView
                android:id="@+id/notification"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:src="@drawable/bell"
                android:paddingLeft="-20dp"
                android:paddingTop="10dp"
                />
            <ImageView
                android:id="@+id/profile"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:src="@drawable/user"
                android:paddingLeft="-20dp"
                android:paddingTop="8dp"

                />
        </TableRow>
    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_courses"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="254dp" />


</RelativeLayout>