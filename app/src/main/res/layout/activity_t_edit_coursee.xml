<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".T_edit_coursee">

    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/header"
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:menu="@menu/drawermenu"
        app:itemTextColor="@color/colorWhite"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ActionBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_pic"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/actionbar_text"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="7sp"
                android:text="Edit Course"
                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="625dp"
            android:paddingLeft="10dp"
            android:text="Course Information"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="20sp" />


        <Button
            android:id="@+id/add_lessons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="269dp"
            android:text="Add Lesson +" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="598dp"
            android:paddingLeft="10dp"
            android:text="TITLE"
            android:textColor="@color/colorDarkGray"
            android:textStyle="italic" />

        <EditText
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="559dp"
            android:backgroundTint="@color/colorDarkGray"
            android:paddingLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="538dp"
            android:paddingLeft="10dp"
            android:text="DESCRIPTION"
            android:textColor="@color/colorDarkGray"
            android:textStyle="italic" />

        <EditText
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="498dp"
            android:backgroundTint="@color/colorDarkGray"
            android:paddingLeft="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="474dp"
            android:paddingLeft="10dp"
            android:text="Timing Slots"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="454dp"
            android:paddingLeft="10dp"
            android:text="FROM"
            android:textColor="@color/colorDarkGray"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/time"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="412dp"
            android:backgroundTint="@color/colorDarkGray"
            android:paddingLeft="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="397dp"
            android:paddingLeft="10dp"
            android:text="To"
            android:textColor="@color/colorDarkGray"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/time2"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="355dp"
            android:backgroundTint="@color/colorDarkGray"
            android:paddingLeft="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="327dp"
            android:paddingLeft="10dp"
            android:text="Lesson "
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>